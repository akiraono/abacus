<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
  <appenders>
    <Console name="console">
      <PatternLayout pattern="[%d{yyyy/MM/dd HH:mm:ss.SSS}] [%-5level] [%C:%M]: %msg%n" />
    </Console>
    <File name="file" filename="abacus.log">
      <PatternLayout pattern="[%d{yyyy/MM/dd HH:mm:ss.SSS}] [%-5level] [%C:%M]: %msg%n" />
    </File>
  </appenders>
  
  <loggers>
    <root level="trace">
      <appender-ref ref="console" />
      <appender-ref ref="file" />
    </root>
  </loggers>
</configuration>
