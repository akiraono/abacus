<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
  <appenders>
    <Console name="console">
      <PatternLayout pattern="[%d{yyyy/MM/dd HH:mm:ss.SSS}] [%-5level] [%C:%M]: %msg%n" />
    </Console>
  </appenders>
  
  <loggers>
    <root level="debug">
      <appender-ref ref="console" />
    </root>
  </loggers>
</configuration>

